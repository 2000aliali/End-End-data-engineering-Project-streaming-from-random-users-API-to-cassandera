lighttpd = """
server.modules  = (
"mod_rewrite",
"mod_access",
"mod_setenv",
"mod_fastcgi",
#"mod_scgi",
"mod_compress",
"mod_expire",
"mod_secdownload",
"mod_accesslog"
)

server.port = 80
server.document-root = "${spark_dir}"
accesslog.filename = "${spark_dir}/log/lighttpd_access_log"
server.errorlog = "${spark_dir}/log/lighttpd_error_log"
static-file.exclude-extensions = ( ".py", ".pyc", ".fcgi" )

server.pid-file = "/var/run/lighttpd.pid"
#server.username = "lighttpd"
#server.groupname = "lighttpd"
compress.cache-dir = "${spark_dir}/cache/compress/"
compress.filetype = ("text/plain", "text/html")

fastcgi.server = ( "/etc/python.fcgi" => ((
                                   "min-procs" => 1,
                                   "max-procs" => 2,
                                   "socket" => "/tmp/fastcgi.socket",
                                   "bin-path" => "${spark_dir}/etc/python.fcgi"
)))

url.rewrite-once = ( 
	"^/favicon.ico$" => "/public/favicon.ico",
	"^/public/(.*)$" => "/public/$1",
	"^/(.*)$" => "/etc/python.fcgi/$1",
)

mimetype.assign = (
".html" => "text/html",
".gif"  => "image/gif",
".png"  => "image/png",
".jpg"  => "image/jpeg",
".jpeg" => "image/jpeg",
".css"  => "text/css",
".js"   => "application/x-javascript",
".txt"  => "text/plain"
)
"""

modpython = """
